<header>
    <a style="left:0; margin-left: 25%" class="top-button" href="/">Activities</a>
    <h1><%=activityType%></h1>
    <a style="right:0; margin-right: 25%" class="top-button" href="/user/register/<%=activityType%>">Register</a></header>
<main>

    <form id="registration-form" style="text-align: center" action="/user/login" method="POST">
        <h1>Login</h1>

        <% if(typeof error !== 'undefined') { %>
        <h4 style='color:red'><%=error%></h4>
        <% } %>
        <input type="hidden" name="activityType" value="<%=activityType%>">
        <input type="hidden" name="_csrf" value="<%=csrf%>">
        <input type="text" placeholder="Username" name="username">
        <input type="password" placeholder="Password" name="password">
        <input type="submit" value="Login">
    </form>
</main>
<aside>
</aside>
<footer>
</footer>
